---
// @ts-ignore
import { Icon } from "astro-icon/components";

const featuredDogs = [
  {
    name: "Venom",
    type: "Stud",
    age: "4 years",
    status: "Available",
    price: "Stud Fee: $2,800",
    image: "venom-stud.jpg",
    description: "Imported champion with exotic lilac tri genetics"
  },
  {
    name: "Harley Quinn",
    type: "Puppy",
    age: "12 weeks",
    status: "Available",
    price: "$5,500",
    image: "harley-quinn-puppy.jpg",
    description: "Rare chocolate tri female with exceptional conformation"
  },
  {
    name: "Thanos",
    type: "Stud",
    age: "3 years",
    status: "Available",
    price: "Stud Fee: $3,200",
    image: "thanos-stud.jpg",
    description: "Purple tri import with legendary genetics"
  },
  {
    name: "Mystique",
    type: "Puppy",
    age: "10 weeks",
    status: "Reserved",
    price: "$4,800",
    image: "mystique-puppy.jpg",
    description: "Blue tri female with stunning color genetics"
  }
];
---

<div class="mt-24 px-4">
  <div class="text-center mb-16">
    <h2 class="font-heading text-4xl lg:text-5xl font-bold text-off-white mb-4">
      Featured <span class="text-vibrant-blue">English Bulldogs</span>
    </h2>
    <p class="text-lg text-light-gray max-w-2xl mx-auto">
      Discover our exceptional English Bulldogs featuring rare color genetics and quality breeding program.
      Each dog represents our commitment to excellence and innovation in breeding.
    </p>
  </div>

  <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8 max-w-6xl mx-auto">
    {featuredDogs.map((dog) => (
      <div class="group bg-dark-navy-light rounded-md shadow-blue-glow hover:shadow-blue-glow-lg transition-all duration-300 overflow-hidden border border-vibrant-blue hover-scale">
        <!-- Dog Image Placeholder -->
        <div class="aspect-square bg-gradient-to-br from-vibrant-blue to-blue-600 flex items-center justify-center relative overflow-hidden">
          <div class="text-off-white text-center">
            <!-- TODO: Replace this placeholder with your actual dog image path (e.g., from public/ or Strapi media URL). This is the spot to edit for custom images later. -->
            <Icon class="w-12 h-12 mb-2 mx-auto" name="bx:bxs-dog" />
            <p class="text-sm font-medium">{dog.name}</p>
            <p class="text-xs opacity-80">Photo Coming Soon</p>
          </div>
          
          <!-- Status Badge -->
          <div class="absolute top-3 right-3">
            <span class={`text-off-white text-xs font-bold px-2 py-1 rounded-full ${
              dog.status === 'Available' ? 'bg-green-500' : 'bg-red-500'
            }`}>
              {dog.status}
            </span>
          </div>
          
          <!-- Type Badge -->
          <div class="absolute top-3 left-3">
            <span class={`text-off-white text-xs font-bold px-2 py-1 rounded-full flex items-center gap-1 ${
              dog.type === 'Stud' ? 'bg-warm-orange' : 'bg-pink-500'
            }`}>
              {dog.type === 'Stud' ? (
                <Icon class="w-3 h-3" name="bx:bxs-crown" />
              ) : (
                <Icon class="w-3 h-3" name="bx:bxs-heart" />
              )}
              {dog.type}
            </span>
          </div>
        </div>
        
        <!-- Dog Details -->
        <div class="p-6">
          <h3 class="font-bold text-xl text-off-white mb-2 group-hover:text-vibrant-blue transition-colors">
            {dog.name}
          </h3>
          <p class="text-light-gray mb-2 flex items-center gap-2">
            <Icon class="w-4 h-4 text-vibrant-blue" name="bx:bxs-calendar" />
            {dog.age}
          </p>
          <p class="text-light-gray text-sm mb-3 line-clamp-2">
            {dog.description}
          </p>
          <div class="flex items-center justify-between">
            <span class="text-vibrant-blue font-bold text-lg">{dog.price}</span>
            <button class="bg-warm-orange text-dark-navy px-4 py-2 rounded-md hover:bg-warm-orange-hover transition-all duration-300 text-sm font-medium hover-scale shadow-blue-glow">
              {dog.type === 'Stud' ? 'Breeding Info' : 'View Details'}
            </button>
          </div>
        </div>
      </div>
    ))}
  </div>
  
  <!-- Call to Action -->
  <div class="text-center mt-12">
    <p class="text-light-gray mb-6">
      Ready to welcome a legendary bulldog into your family?
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/studs" class="bg-warm-orange text-dark-navy px-6 py-3 rounded-md hover:bg-warm-orange-hover transition-all duration-300 font-semibold inline-flex items-center gap-2 shadow-blue-glow hover-scale">
        <Icon class="w-5 h-5" name="bx:bxs-crown" />
        View All Studs
      </a>
      <a href="/puppies" class="bg-dark-navy-light text-vibrant-blue border-2 border-vibrant-blue px-6 py-3 rounded-md hover:bg-vibrant-blue hover:text-off-white transition-all duration-300 font-semibold inline-flex items-center gap-2 shadow-blue-glow hover-scale">
        <Icon class="w-5 h-5" name="bx:bxs-heart" />
        View All Puppies
      </a>
    </div>
  </div>
</div>
