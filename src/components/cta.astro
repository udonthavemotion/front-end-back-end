---
import Link from "./ui/link.astro";
import { Icon } from "astro-icon/components";
---

<div class="bg-gradient-to-r from-dark-navy to-dark-navy-light p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-md flex flex-col items-center text-center relative overflow-hidden shadow-blue-glow-lg border border-vibrant-blue">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-10 left-10 w-20 h-20 border-2 border-vibrant-blue rounded-full"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 border-2 border-warm-orange rounded-full"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-40 h-40 border border-vibrant-blue rounded-full"></div>
  </div>
  
  <div class="relative z-10">
    <!-- Icon -->
    <div class="w-16 h-16 bg-warm-orange rounded-full flex items-center justify-center mb-6 shadow-blue-glow">
      <Icon class="w-8 h-8 text-dark-navy" name="bx:bxs-dog" />
    </div>
    
    <!-- Headline -->
    <h2 class="text-off-white font-heading text-4xl md:text-6xl font-bold mb-4">
      Find Your Perfect
      <span class="text-vibrant-blue">Bulldog</span>
    </h2>
    
    <!-- Subheadline -->
    <p class="text-light-gray mt-4 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
      Connect with premier English Bulldog breeders. Our expert team is ready to help you find the perfect companion or breeding partner from our quality breeding program.
    </p>
    
    <!-- Features -->
    <div class="grid sm:grid-cols-3 gap-6 mt-8 mb-8">
      <div class="text-center">
        <div class="w-12 h-12 bg-vibrant-blue bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-2">
          <Icon class="w-6 h-6 text-vibrant-blue" name="bx:bxs-phone" />
        </div>
        <p class="text-light-gray text-sm">Expert Consultation</p>
      </div>
      <div class="text-center">
        <div class="w-12 h-12 bg-vibrant-blue bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-2">
          <Icon class="w-6 h-6 text-vibrant-blue" name="bx:bxs-heart" />
        </div>
        <p class="text-light-gray text-sm">Perfect Match</p>
      </div>
      <div class="text-center">
        <div class="w-12 h-12 bg-vibrant-blue bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-2">
          <Icon class="w-6 h-6 text-vibrant-blue" name="bx:bxs-shield" />
        </div>
        <p class="text-light-gray text-sm">Health Guarantee</p>
      </div>
    </div>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 mt-8 justify-center">
      <Link href="/contact" style="luxury" class="flex gap-2 items-center justify-center">
        <Icon class="w-5 h-5" name="bx:bxs-envelope" />
        Get in Touch
      </Link>
      <Link href="/puppies" style="inverted" class="flex gap-2 items-center justify-center">
        <Icon class="w-5 h-5" name="bx:bxs-heart" />
        View Available Puppies
      </Link>
    </div>
    
    <!-- Contact Info -->
    <div class="mt-8 pt-6 border-t border-vibrant-blue">
      <div class="flex flex-col sm:flex-row gap-4 items-center justify-center text-light-gray text-sm">
        <div class="flex items-center gap-2">
          <Icon class="w-4 h-4 text-vibrant-blue" name="bx:bxs-phone" />
          <span>561-516-2560</span>
        </div>
        <div class="flex items-center gap-2">
          <Icon class="w-4 h-4 text-vibrant-blue" name="bx:bxs-envelope" />
          <span>info@mainlinebulldogs.com</span>
        </div>
      </div>
    </div>
  </div>
</div>
